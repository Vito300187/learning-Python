name = input("Enter file:")
if len(name) < 1: name = "mbox-short.txt"
handle = open(name)

list_name = []
for name in handle:
    if name.startswith('From '):
        list_name.append(name.split()[1])

hash_list_unique_names = {}

for hash_list_unique_name in list_name:
    if hash_list_unique_name in hash_list_unique_names.keys():
        hash_list_unique_names[hash_list_unique_name] += 1
    else:
        hash_list_unique_names[hash_list_unique_name] = 1

max_value = max(hash_list_unique_names.values())
transform_hash_list_unique_names = {}

for key, value in hash_list_unique_names.items():
    transform_hash_list_unique_names[value] = key

print(transform_hash_list_unique_names[max_value], max_value)
